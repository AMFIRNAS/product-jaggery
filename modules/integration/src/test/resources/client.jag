<!DOCTYPE html>
<html>
<head></head>
<body>
<%
var param = request.getParameter('action');
print("Web Socket test");
%>


<script>
var ws;
var url = 'ws://localhost:9764/testapp/server.jag';
function start() {
	ws = new WebSocket(url);
	ws.onopen = function() {
		document.write("web Socket on open.");
	};
	ws.onmessage = function(event) {
		document.write("web Socket On message from Server.");
	};
	ws.onclose = function() {
		document.write("web Socket on close.");
	};
	ws.onopen();
}

function send() {
	ws.send('Hello Web Socket');
}

function close() {
	ws.close();
}

function doSomething() {
  start();
  setTimeout(function () {
        send();
    }, 1000);
}
<%


if (param == "start") {
    print("start();");
} else if (param == "send") {
    new Log().info("Send")
    print("doSomething();");
} else if (param == "close") {
    print("start();");
    print("close();");
}

%>


</script>

</body>
</html>